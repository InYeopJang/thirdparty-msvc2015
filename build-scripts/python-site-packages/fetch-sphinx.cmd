@setlocal enableextensions
::
:: Use pip to install Sphinx + the bootstrap theme
::
@echo Setting up Sphinx + bootstrap theme

::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
:: Setup environment. Important to ensure correct detection of environment
::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
@call %~dp0..\cmds\common-setup.cmd
@set PYTHON_EXTRAS_DIR=%~dp0..\extras\python
@set SETUPTOOLS_LAUNCHER=natural

@set VERSION=1.3.1
@call %PYTHON_INSTALL_ROOT%\Scripts\pip.cmd install Sphinx==%VERSION%
@call %PYTHON_INSTALL_ROOT%\Scripts\pip.cmd install sphinx_bootstrap_theme

::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
:: Post-process
::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
set WRITE_LAUNCHER=%PYTHON_EXTRAS_DIR%\write-launcher-script.py
set PYTHON_SITE_PACKAGES=%PYTHON_INSTALL_ROOT%\Lib\site-packages
@call %PYTHON_INSTALL_ROOT%\python.exe %WRITE_LAUNCHER% --rm_exe %PYTHON_SITE_PACKAGES%\sphinx-%VERSION%.dist-info\entry_points.txt

::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
:: Finalize
::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::
@call try-pause.cmd
goto:eof